abstract Creature
{	
	char[10] ID
	char[20] Name
	choice Gender { Choices(["F", "M"]) }
	date Birthday { Min("12-20-1981") }	
}

type Pet : Creature
{
	bool IsLazy
	private string SpecialRace
}

type Dog : Pet
{
	char[10] Breed { Default("aaa") }
	bool IsOmnivores
	bool Sleepy
}

type Cat : Pet
{
	char[10] Breed
    bool HateDogs
}

type Person : Creature
{	
	string Address
	Person[] Friends
	Pet[] Pets
}

root 
{
	Persons,
	Pets 
}